# Configuración de base de datos MySQL para el proyecto de inventario
# Copia este archivo como .env y ajusta los valores según tu configuración


# Configuración del Sistema
INVENTARIO_MODO=bd  # Opciones: 'diccionario' o 'bd'

# Datos de conexión a MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=tu_usuario_mysql
DB_PASSWORD=tu_password_mysql
DB_NAME=inventario_db
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Configuración de Testing
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_USER=tu_usuario_test_mysql
TEST_DB_PASSWORD=tu_password_test_mysql
TEST_DB_NAME=inventario_test_db
TEST_DB_CHARSET=utf8mb4
TEST_DB_COLLATION=utf8mb4_unicode_ci



